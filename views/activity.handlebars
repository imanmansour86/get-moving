<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>
<div class="row">
    <div class="column">
        {{#if activities.length}}
        <div class="col-md-6 activity-list">
        <h3>Upcoming Activities:</h3>
    
        {{#each activities as |activity|}}

            <h4><a href="/activity/{{activity.id}}">{{activity.title}}</a></h4>
            <h5> {{activity.activity_date}} </h5>
            <p> {{activity.description}} </p>
            <p> {{activity.location}} </p>
            <button class="btn btn-sm btn-danger" data-id="{{activity.id}}">DELETE</button>
        {{/each}}
        </div>
        {{/if}}
    </div>    
    <div class="column">
        <div class="col-md-6">
            <h2>Add an Activity/Event</h2>
            <form class="form activity">
                <div class="form-activity">
                    <label for="title">Title</label>
                    <input class="form-input" type="text" id="title" />
                </div>
                <div class="form-activity">
                    <label for="description">Description:</label>
                    <input class="form-input" type="text" id="description" />
                </div>
                <div class="form-activity">
                    <label for="location">Location</label>
                    <input class="form-input" type="text" id="location" />
                </div>
                <div class="form-activity">
                    <label for="imageURL">ImageURL</label>
                    <input class="form-input" type="text" id="imageURL" />
                </div>
                <div class="form-activity">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

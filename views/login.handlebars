 <div class="row">
  <div class="col-md-6">
    <h2>Signup</h2><br>
    <form class="form signup-form">
      <div class="form-group">
        <label for="signupName">name:</label>
        <input class="form-input" type="text" id="signupName"/>
      </div>
      <div class="form-group">
        <label for="signupEmail">email:</label>
        <input class="form-input" type="text" id="signupEmail"/>
      </div>
      <div class="form-group">
        <label for="signupPassword">password:</label>
        <input class="form-input" type="password" id="signupPassword"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form> 
  </div>
  <div class="col-md-6">
    <h2>Login</h2><br>
    <form class="form login-form">
      <div class="form-group">
        <label for="loginEmail">email:</label>
        <input class="form-input" type="text" id="loginEmail"/>
      </div>
      <div class="form-group">
        <label for="loginPassword">password:</label>
        <input class="form-input" type="password" id="loginPassword"/>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
</div>